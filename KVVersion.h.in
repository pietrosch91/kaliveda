/* 
      C++ preprocessor directives set when project is configured
*/

/* Root directory of installation */
#define KV_ROOT "${KV_ROOT}"

/* String with version information */
#define KV_VERSION "${KV_VERSION_STRING}"
#define KV_MAJOR_VERSION ${KV_MAJOR_VERSION}
#define KV_MINOR_VERSION ${KV_MINOR_VERSION}
#define KV_PATCH_VERSION ${KV_PATCH_VERSION}

/* Date when project was built */
#define KV_BUILD_DATE "${KV_BUILD_DATE}"

/* Time when project was built */
#define KV_BUILD_TIME "${KV_BUILD_TIME}"

/* Username of person who performed the build */
#define KV_BUILD_USER "${KV_USER}"

/* Directory containing the sources for the build */
#define KV_SOURCE_DIR "${KVPROJ_ROOT_ABS}"

/* CMake build type (Release, Debug, RelWithDebInfo, ...) */
#define KV_BUILD_TYPE "${KV_BUILD_TYPE}"

/* String with ROOT version information */
#define KV_ROOT_VERSION "${ROOT_VERSION}"

/* Directory with class templates */
#define TEMPLATEDIR ${CMAKE_INSTALL_FULL_TMPLDIR}

/* Directory with configuration files */
#define ETCDIR ${CMAKE_INSTALL_FULL_SYSCONFDIR}

/* Directory with data files used by classes */
#define DATADIR ${CMAKE_INSTALL_FULL_DATAROOTDIR}

/* Directory containing class libraries */
#define LIBDIR ${CMAKE_INSTALL_FULL_LIBDIR}

/* Directory containing header files */
#define INCDIR ${CMAKE_INSTALL_FULL_INCLUDEDIR}

/* Directory containing executables */
#define BINDIR ${CMAKE_INSTALL_FULL_BINDIR}

/* Directory containing dataset files */
#define DATASETDIR ${CMAKE_INSTALL_FULL_DATASETDIR}
